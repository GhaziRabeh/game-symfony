{% extends 'base.html.twig' %}

{% block title %}{{ game.name }}{% endblock %}

{% block body %}
    <!-- Game Details Section -->
    <div class="game-details-section">
        <div class="container">
            <div class="game-header">
                <h1>{{ game.name }}</h1>
                    <strong>Rating:</strong>
                    {% for i in 1..5 %}
                        <i class="fa fa-star {% if i <= game.rate %}is-filled{% else %}is-fade{% endif %}"></i>
                    {% endfor %}
                </div>
                <p><strong>Price:</strong> {{ game.price }} USD</p>
                <p><strong>Available Quantity:</strong> {{ game.quantity }}</p>
            </div>
            <div class="game-image">
                <img src="{{ asset('uploads/images/' ~ game.imageUrl) }}" alt="{{ game.name }}" class="img-fluid">
            </div>
            <style>
    .game-image img {
        max-width: 100%; /* Ensures the image does not exceed the container's width */
        height: auto; /* Maintains aspect ratio */
        object-fit: contain; /* Ensures the image is contained within its box without stretching */
        max-height: 300px; /* Adjust the max-height to limit the image's vertical size */
    }
</style>
            <div class="game-description">
                <p>{{ game.description }}</p>
            </div>
        </div>
        <button class="btn btn-primary btn-lg">Checkout</button>

    </div>
{% endblock %}
