{% extends 'adminBase.html.twig' %}

{% block title %}Jeux{% endblock %}

{% block body %}
<main id="main" class="main">
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Jeux Details</h1>

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Jeux Information</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th class="col-3">Id</th>
                            <td>{{ jeux.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ jeux.name }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ jeux.description }}</td>
                        </tr>
                        <tr>
                            <th>Image</th>
                            <td>
                                <img src="{{ asset('uploads/images/' ~ jeux.imageUrl) }}" alt="Jeux Image" class="img-fluid" width="200">
                            </td>
                        </tr>
                        <tr>
                            <th>Price</th>
                            <td>{{ jeux.price }}</td>
                        </tr>
                        <tr>
                            <th>Rate</th>
                            <td>{{ jeux.rate }}</td>
                        </tr>
                        <tr>
                            <th>Quantity</th>
                            <td>{{ jeux.quantity }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between mt-3">
                    <a href="{{ path('app_jeux_index') }}" class="btn btn-secondary">Back to List</a>
                    <a href="{{ path('app_jeux_edit', {'id': jeux.id}) }}" class="btn btn-warning">Edit</a>
                </div>

                <hr>

                {{ include('admin/jeux/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</main>
{% endblock %}
