{% extends 'adminBase.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<main id="main" class="main">
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Category Details</h1>

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Category Information</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th class="col-3">Id</th>
                            <td>{{ category.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ category.name }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ category.description }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between mt-3">
                    <a href="{{ path('app_category_index') }}" class="btn btn-secondary">Back to List</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning">Edit</a>
                </div>

                <hr>

                {{ include('admin/category/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
    </main>
{% endblock %}
